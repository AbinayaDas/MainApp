@model IEnumerable<UserProfile>

@{
    ViewData["Title"] = "Index";
}

@if (TempData["ResultOk"] != null)
{
    <h1 class="alert-success">@TempData["ResultOk"]</h1>
}

<div class="container shadow p-5">

    <h1 class="text-center mb-3">Account Management </h1>

    <div class="col mb-3">
        <a asp-controller="UserProfile" asp-action="Create" class="btn btn-lg btn-primary"><i class="bi bi-file-plus-fill"></i>Add User Profile</a>
    </div>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th scope="col">UserName</th>
                <th scope="col">Age</th>
                <th scope="col">EmailId</th>
                <th scope="col">Address</th>
                <th scope="col">State</th>
                <th scope="col">Longitude</th>
                <th scope="col">Latitude</th>
                <th scope="col">LandSize</th>
                
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td width="12%">
                        @item.Name
                    </td>
                    <td width="12%">
                        @item.Age
                    </td>
                    <td width="12%">
                        @item.EmailId
                    </td>
                    <td width="12%">
                        @item.Address
                    </td>
                    <td width="12%">
                        @item.State
                    </td>
                    <td width="12%">
                        @item.Longitude
                    </td>
                    <td width="12%">
                        @item.Latitude
                    </td>
                    <td width="12%">
                        @item.LandSize
                    </td>
 
                    <td>
                        <div role="group" class="w-60 btn-group">
                            <a asp-controller="UserProfile" asp-action="Edit" asp-route-id="@item.Id" class=" btn btn-sm btn-primary"><i class="bi bi-pencil-square"></i>Edit</a>&nbsp;
                            <a asp-controller="UserProfile" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="bi bi-trash-fill"></i>Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
