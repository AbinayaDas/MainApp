@model UserProfile


<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Add User</h2>
    </div>

    <form method="post">
        <div asp-validation-summary="All"></div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Name">UserName</label>
                <input type="text" class="form-control mb-3" asp-for="Name" placeholder="Enter Name">
                <span asp-validation-for="Name" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Age">Age</label>
                <input type="text" class="form-control mb-3" asp-for="Age" placeholder="Enter Age">
                <span asp-validation-for="Age" class=" alert-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="EmailId">EmailId</label>
                <input type="text" class="form-control mb-3" asp-for="EmailId" placeholder="Enter EmailId">
                <span asp-validation-for="EmailId" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6 mb-3">
                <label asp-for="Address">Address</label>
                <input type="text" class="form-control" asp-for="Address" placeholder="Enter Address">
                <span asp-validation-for="Address" class=" alert-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="State">State</label>
                <input type="text" class="form-control mb-3" asp-for="State" placeholder="Enter State">
                <span asp-validation-for="State" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6 mb-3">
                <label asp-for="LandSize">LandSize</label>
                <input type="number" class="form-control" asp-for="LandSize">
                <span asp-validation-for="LandSize" class=" alert-danger"></span>
            </div>
        </div>


        <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Save</button>
        <a asp-controller="UserProfile" asp-action="Index" class="btn btn-lg btn-warning p-2">Back To List</a>
    </form>

</div>


@*//for front end validations*@

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

